{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "outDir": "dist",
        // "sourceMap": true,Ok
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "declaration": true, // This tells TypeScript to emit an .d.ts definitions file along with your compiled JavaScript,
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ],
        "types": ["jest", "node", "@types/jest"],
        "experimentalDecorators": true,
    },
    "include": ["**/*", "./dfx_output/storage/*.ts", "../icp/ts-canister/dist"],
    "exclude": [
        "node_modules",
        "dist",
        // Activate if you don't want to run integration-test during building phase
        // "integration-test",
        "**/*.spec.ts",
        // "**/*.test.ts",
        "**/*.dev.ts",
        "**/__mocks__/**/*.ts",
        "**/__tests__/**/*.ts",
        "**/__dev__/*",
        "ts-config.ts",
        "jest.config.ts",
        "__shared__"
    ]
}
