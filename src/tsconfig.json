{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "NodeNext", // Supports both ES Modules and CommonJS
        "target": "ES6",
        "noImplicitAny": true,
        "outDir": "dist",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "types": ["jest", "node"], // Ensure Node.js and Jest types are available
        "experimentalDecorators": true,
        "skipLibCheck": true, // Helps avoid module resolution errors with third-party packages
        "moduleResolution": "Node16", // Ensures compatibility with ESM packages
        "allowSyntheticDefaultImports": true // Useful for React and other modern libraries
    },
    "include": [
        "**/*",
        "./dfx_output/storage/*.ts",
        "../icp/ts-canister/dist"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.dev.ts",
        "**/__mocks__/**/*.ts",
        "**/__tests__/**/*.ts",
        "**/__dev__/*",
        "ts-config.ts",
        "jest.config.ts",
        "__shared__"
    ]
}
